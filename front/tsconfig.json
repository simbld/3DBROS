{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*": [
        "src/assets/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@configs/*": [
        "src/configs/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@env/*": [
        "src/env/*"
      ],
      "@themes/*": [
        "src/themes/*"
      ],
      "@lang/*": [
        "src/lang/*"
      ],
      "@components/*": [
        "src/features/components/*"
      ],
      "@containers/*": [
        "src/containers/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@layouts/*": [
        "src/features/layouts/*"
      ],
      "@contexts/*": [
        "src/contexts/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@reducers/*": [
        "src/store/reducers/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@helpers/*": [
        "src/helpers/*"
      ],
      "@interfaces/*": [
        "src/interfaces/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@graphql/*": [
        "src/graphql/*"
      ],
      "@coverage/*": [
        "coverage/*"
      ],
      "@validations/*": [
        "src/validations/*"
      ],
      "@tests/*": [
        "__tests__/*"
      ],
      "@mocks/*": [
        "mocks/*"
      ],
      "@fonts/*": [
        "src/fonts/*"
      ],
      "@global/*": [
        "src/global/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "types": [
      "jest",
      "node"
    ],
    "allowJs": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}

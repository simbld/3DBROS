{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2021",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // Utilisation de "react-jsx" pour Next.js
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Path mapping */
    "baseUrl": "./",
    "paths": {
      /* Assets */
      "@assets/*": ["front/src/assets/*"],
      "@public/*": ["front/public/*"],

      /* Configurations */
      "@configs/*": ["front/src/configs/*"],
      "@constants/*": ["front/src/constants/*"],
      "@themes/*": ["front/src/themes/*"],
      "@translations/*": ["front/src/lang/*"],

      /* Components & Features */
      "@components/*": ["front/src/features/components/*"],
      "@containers/*": ["front/src/containers/*"],
      "@features/*": ["front/src/features/*"],
      "@layouts/*": ["front/src/features/layouts/*"],

      /* Contexts, Hooks, and State Management */
      "@contexts/*": ["front/src/contexts/*"],
      "@hooks/*": ["front/src/hooks/*"],

      /* Services and Utilities */
      "@services/*": ["front/src/services/*"],
      "@utils/*": ["front/src/utils/*"],

      /* Interfaces & Models */
      "@interfaces/*": ["front/src/interfaces/*"],
      "@models/*": ["front/src/models/*"],

      /* Middleware */
      "@middlewares/*": ["front/src/middlewares/*"],

      /* Api */
      "@api/*": ["front/src/api/*"],

      /* Redux */
      "@store/*": ["front/src/store/*"],

      /* GraphQL */
      "@graphql/*": ["front/src/graphql/*"],

      /* Validation & Testing */
      "@validations/*": ["front/src/validations/*"],
      "@tests/*": ["front/src/__tests__/*"],
      "@mocks/*": ["front/src/mocks/*"],

      /* Pages & Styles */
      "@global/*": ["front/src/global/*"],
      "@pages/*": ["front/src/pages/*"],
      "@styles/*": ["front/src/styles/*"]
    },

    /* Type checking */
    "typeRoots": ["node_modules/@types", "types"],
    "types": ["jest", "node"]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}

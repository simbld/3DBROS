{
  "compilerOptions": {
    /* Basic Options */
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./dist",
    /* Path mapping */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["config/*"],
      "@controllers/*": ["controllers/*"],
      "@dto/*": ["dto/*"],
      "@entities/*": ["entities/*"],
      "@enums/*": ["enums/*"],
      "@env/*": ["env/*"],
      "@interfaces/*": ["interfaces/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@pages/*": ["pages/*"],
      "@prisma/*": ["prisma/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@src/*": ["src/*"],
      "@order/*": ["src/order/*"],
      "@test/*": ["test/*"],
      "@types/*": ["types/*"],
      "@user/*": ["src/user/*"],
      "@utils/*": ["utils/*"]
    },
    /* Libraries */
    "lib": ["es2021", "dom"],
    /* Type checking */
    "typeRoots": ["node_modules/@types", "types"],
    "incremental": true,
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "back/test/**/*.ts",
    "app.e2e-spec.ts",
    "prisma/prisma.service.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.build.json",
      "composite": true
    }
  ],
  "exclude": ["node_modules", "dist"]
}

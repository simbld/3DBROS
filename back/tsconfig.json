{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es2021",
    "baseUrl": "./",
    "paths": {
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"],
      "@controllers/*": ["src/controllers/*"],
      "@enums/*": ["src/graphQl/enums/*"],
      "@env/*": ["env/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@models/*": ["src/models/*"],
      "@pipes/*": ["src/pipes/*"],
      "@prisma/*": ["prisma/*"],
      "@services/*": ["src/services/*"],
      "@shared/*": ["src/shared/*"],
      "@test/*": ["src/test/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      // models path
      "@cart/*": ["src/models/cart/*"],
      "@cartItem/*": ["src/models/cartItem/*"],
      "@category/*": ["src/models/category/*"],
      "@collection/*": ["src/models/collection/*"],
      "@delivery/*": ["src/models/delivery/*"],
      "@notification/*": ["src/models/notification/*"],
      "@order/*": ["src/models/order/*"],
      "@orderItem/*": ["src/models/orderItem/*"],
      "@payment/*": ["src/models/payment/*"],
      "@product/*": ["src/models/product/*"],
      "@productCollection/*": ["src/models/productCollection/*"],
      "@review/*": ["src/models/review/*"],
      "@user/*": ["src/models/user/*"],
      "@vat/*": ["src/models/vat/*"],
      "@/*": ["src/*"]
    },
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "lib": ["es2021", "dom"],
    "typeRoots": ["node_modules/@types", "types"],
    "incremental": true,
    "types": ["jest", "node", "aws-sdk"]
  },
  "include": [
    "src/**/*.ts",
    "./../src/**/*.ts",
    "test/**/*.ts",
    "./../test/**/*.ts",
    "back/test/**/*.ts",
    "./../back/test/**/*.ts",
    "app.e2e-spec.ts",
    "./../app.e2e-spec.ts",
    "prisma/prisma.service.ts",
    "./../prisma/prisma.service.ts",
    "src/models/graphQl/enums/user-role.enum.ts",
    "./../src/models/graphQl/enums/user-role.enum.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.build.json",
      "composite": true
    }
  ],
  "exclude": ["node_modules", "dist"]
}

{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es2021",
    "baseUrl": "./",
    "paths": {
      "@common/*": ["../back/src/common/*"],
      "@config/*": ["../back/src/config/*"],
      "@controllers/*": ["../back/src/controllers/*"],
      "@enums/*": ["../back/src/graphQl/enums/*"],
      "@env/*": ["../back/env/*"],
      "@interfaces/*": ["../back/src/interfaces/*"],
      "@middlewares/*": ["../back/src/middlewares/*"],
      "@models/*": ["../../back/src/models/*"],
      "@pipes/*": ["../back/src/pipes/*"],
      "@prisma/*": ["../back/prisma/*"],
      "@services/*": ["../back/src/services/*"],
      "@shared/*": ["../back/src/shared/*"],
      "@test/*": ["../back/src/test/*"],
      "@types/*": ["../back/src/types/*"],
      "@utils/*": ["../back/src/utils/*"],
      // models path
      "@cart/*": ["../back/src/models/cart/*"],
      "@cartItem/*": ["../back/src/models/cartItem/*"],
      "@category/*": ["../back/src/models/category/*"],
      "@collection/*": ["../back/src/models/collection/*"],
      "@delivery/*": ["../back/src/models/delivery/*"],
      "@notification/*": ["../back/src/models/notification/*"],
      "@order/*": ["../back/src/models/order/*"],
      "@orderItem/*": ["../back/src/models/orderItem/*"],
      "@payment/*": ["../back/src/models/payment/*"],
      "@product/*": ["../back/src/models/product/*"],
      "@productCollection/*": ["../back/src/models/productCollection/*"],
      "@review/*": ["../back/src/models/review/*"],
      "@user/*": ["../back/src/models/user/*"],
      "@vat/*": ["../back/src/models/vat/*"]
    },
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "lib": ["es2021", "dom"],
    "typeRoots": ["node_modules/@types", "types"],
    "incremental": true,
    "types": ["jest", "node", "aws-sdk"]
  },
  "include": [
    "src/**/*.ts",
    "./../src/**/*.ts",
    "test/**/*.ts",
    "./../test/**/*.ts",
    "back/test/**/*.ts",
    "./../back/test/**/*.ts",
    "app.e2e-spec.ts",
    "./../app.e2e-spec.ts",
    "prisma/prisma.service.ts",
    "./../prisma/prisma.service.ts",
    "src/models/graphQl/enums/user-role.enum.ts",
    "./../src/models/graphQl/enums/user-role.enum.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.build.json",
      "composite": true
    }
  ],
  "exclude": ["node_modules", "dist"]
}

{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "next-env.d.ts",
    "back/src/**/*.ts",
    "back/src/**/*.tsx",
    "front/src/**/*.ts",
    "front/src/**/*.tsx",
    "src/**/*",
    "apps/**/*",
    "libs/**/*",
    "test/**/*",
    "back/prisma/prisma.service.ts"
  ],
  "exclude": ["node_modules", ".eslintrc.cjs"]
}

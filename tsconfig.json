{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "back/src/**/*.ts",
    "front/src/**/*.ts",
    "src",
    "apps",
    "libs",
    "test"
  ],
  "exclude": [
    "node_modules",
    ".eslintrc.cjs"
  ]
}